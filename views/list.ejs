<%-  include("header"); -%>


<div class="mainContainer">

    <div class="p-3 sidebar" style="width: 280px;">
        <a href="/" class="d-flex align-items-center pb-3 mb-3 link-dark text-decoration-none border-bottom">
            <svg class="bi me-2" width="30" height="24">
                <use xlink:href="#bootstrap" /></svg>
            <span class="fs-5 fw-semibold">Projects</span>
        </a>

        <% listOfProjects.forEach(function (projects){ %>
        <p><%= projects %></p>
        <% }); %>
    </div>

    <div class="box2">
        <div class='date'>
            <h3> <%= dateAndTime %></h3>

        </div>

        <div class="todoTitle">
            <h1> <%=  ToDoList %> </h1>

        </div>

        <div>
            <div class="box">

                <% newListItems.forEach(function (item){ %>

                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
                        <p><%= item.name %></p>
                    </div>

                    <input type="hidden" name="listName" value=<%= ToDoList %>></input>
                </form>

                <% }); %>

                <div class='submitButton'>
                    <form action="/" method="POST">
                        <input type="text" placeholder="New Item" name='toDo'>
                        <button class="btn" type="submit" name="list" value=<%= ToDoList %>><i class='fas fa-plus'></i>

                        </button>
                    </form>
                </div>
            </div>
        </div>


        <div class="bottom-container fixed-bottom ">
            <a href="https://linkedin.com/in/pedro-suazo-45b7b43b">LinkedIn</a>
            <a href="https://twitter.com/pbsuazo">Twitter</a>
            <a href="https://pbsuazo.github.io/CV/">Website</a>
            <p class="copyright">Â© 2021 Pedro Suazo.</p>
        </div>
    </div>

</div>



















