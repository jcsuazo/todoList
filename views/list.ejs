<%-  include("header"); -%>


<div class="box" id="heading">
    <h1> <%=  ToDoList %> </h1>
</div>


<div class="box">

    <% newListItems.forEach(function (item){ %>

    <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
            <p><%= item.name %></p>
        </div>

        <input type="hidden" name="listName" value=<%= ToDoList %>></input>
    </form>

    <% }); %>

    <form class="item" action="/" method="POST">
        <input type="text" placeholder="New Item" name='toDo'>

        <button type="submit" name="list" value=<%= ToDoList %>>
            +
        </button>
    </form>
</div>

<%-  include("footer"); -%>